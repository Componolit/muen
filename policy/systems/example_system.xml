<?xml version="1.0"?>
<!DOCTYPE system [
<!ENTITY kernel     SYSTEM "example_kernel.xml">
<!ENTITY binaries   SYSTEM "example_binaries.xml">
<!ENTITY tau0init   SYSTEM "../../subjects/tau0/obj/tau0.xml">
<!ENTITY tau0mem    SYSTEM "../../subjects/tau0/obj/tau0_mem.xml">
<!ENTITY dumperinit SYSTEM "../../subjects/dumper/obj/dumper.xml">
<!ENTITY dumpermem  SYSTEM "../../subjects/dumper/obj/dumper_mem.xml">
<!ENTITY subjainit  SYSTEM "../../subjects/test/obj/subject_a.xml">
<!ENTITY subjamem   SYSTEM "../../subjects/test/obj/subject_a_mem.xml">
<!ENTITY subjbinit  SYSTEM "../../subjects/test/obj/subject_b.xml">
<!ENTITY subjbmem   SYSTEM "../../subjects/test/obj/subject_b_mem.xml">
]>
<system vmxon_address="0" vmcs_start_address="1000">
	&kernel;
	&binaries;

	<subjects>
		<subject id="0" name="tau0">
			&tau0init;
			<memory_layout pml4_address="210000">
				&tau0mem;
				<!-- Ï„0 => kernel interface page -->
				<memory_region physical_address="1ff000" virtual_address="4000" size="4k" alignment="4k" writable="true"  executable="false"/>
			</memory_layout>
			<io_ports bitmap_address="214000">
				<port_range start="50b0"/>
				<port_range start="50b5"/>
			</io_ports>
		</subject>
		<subject id="1" name="dumper">
			&dumperinit;
			<memory_layout pml4_address="220000">
				&dumpermem;
				<!-- subject state descriptors -->
				<memory_region physical_address="1fe000" virtual_address="5000" size="4k" alignment="4k" writable="false" executable="false"/>
				<memory_region physical_address="b8000"                         size="4k" alignment="4k" writable="true"  executable="false"/>
			</memory_layout>
			<io_ports bitmap_address="224000">
				<port_range start="50b0"/>
				<port_range start="50b5"/>
			</io_ports>
		</subject>
		<subject id="2" name="subject_a">
			&subjainit;
			<memory_layout pml4_address="230000">
				&subjamem;
				<memory_region physical_address="b8000" size="4k" alignment="4k" writable="true"  executable="false"/>
			</memory_layout>
			<io_ports bitmap_address="234000">
				<port_range start="03d4" end="03d5"/>
			</io_ports>
		</subject>
		<subject id="3" name="subject_b">
			&subjbinit;
			<memory_layout pml4_address="240000">
				&subjbmem;
				<memory_region physical_address="b8000" size="4k" alignment="4k" writable="true"  executable="false"/>
			</memory_layout>
			<io_ports bitmap_address="244000">
				<port_range start="03d4" end="03d5"/>
			</io_ports>
		</subject>
	</subjects>
</system>
