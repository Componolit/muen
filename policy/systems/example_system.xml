<system vmxon_address="0" vmcs_start_address="1000">
	&kernel;
	&binaries;

	<subjects>
		<subject id="0" name="tau0">
			&tau0init;
			<memory_layout pml4_address="210000">
				<memory_region physical_address="216000" virtual_address="0"    size="4k" alignment="4k" writable="false" executable="true"/>
