			<io_ports bitmap_address="234000">
				<port_range start="03d4" end="03d5"/>
			</io_ports>
		</subject>
		<subject id="2" name="subject2">
			&subj2init;
			<memory_layout pml4_address="240000">
				<memory_region physical_address="246000" virtual_address="0"    size="4k" alignment="4k" writable="false" executable="true"/>
				<memory_region physical_address="247000" virtual_address="1000" size="4k" alignment="4k" writable="false" executable="false"/>
				<memory_region physical_address="248000" virtual_address="2000" size="8k" alignment="4k" writable="true"  executable="false"/>
				<memory_region physical_address="b8000"                         size="4k" alignment="4k" writable="true"  executable="false"/>
			</memory_layout>
			<io_ports bitmap_address="244000">
				<port_range start="03d4" end="03d5"/>
