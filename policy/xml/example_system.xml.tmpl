<?xml version="1.0"?>
<!DOCTYPE system [
<!ENTITY hardware   SYSTEM "hardware/__HARDWARE__.xml">
<!ENTITY kernel     SYSTEM "example_kernel.xml">
<!ENTITY binaries   SYSTEM "example_binaries.xml">
<!ENTITY scheduling SYSTEM "example_scheduling.xml">
<!ENTITY tau0init   SYSTEM "tau0.xml">
<!ENTITY tau0mem    SYSTEM "tau0_mem.xml">
<!ENTITY dumperinit SYSTEM "dumper.xml">
<!ENTITY dumpermem  SYSTEM "dumper_mem.xml">
<!ENTITY subjainit  SYSTEM "subject_a.xml">
<!ENTITY subjamem   SYSTEM "subject_a_mem.xml">
<!ENTITY subjbinit  SYSTEM "subject_b.xml">
<!ENTITY subjbmem   SYSTEM "subject_b_mem.xml">
<!ENTITY subjcinit  SYSTEM "subject_c.xml">
<!ENTITY subjcmem   SYSTEM "subject_c_mem.xml">
<!ENTITY idleinit   SYSTEM "idle.xml">
<!ENTITY idlemem    SYSTEM "idle_mem.xml">
]>
<system vmxon_address="1000" vmcs_start_address="5000">
	&hardware;
	&kernel;
	&binaries;

	<subjects>
		<subject id="0" name="tau0" pml4_address="210000" io_bitmap_address="214000">
			&tau0init;
			<memory_layout>
				&tau0mem;
				<!-- Ï„0 => kernel interface page -->
				<memory_region physical_address="1ff000" virtual_address="4000" size="4k" alignment="4k" writable="true"  executable="false"/>
			</memory_layout>
			<binary name="tau0" physical_address="216000"/>
		</subject>

		<subject id="1" name="dumper" pml4_address="230000" io_bitmap_address="234000">
			&dumperinit;
			<memory_layout>
				&dumpermem;
				<!-- subject state descriptors -->
				<memory_region physical_address="1fe000" virtual_address="5000" size="4k" alignment="4k" writable="false" executable="false"/>
			</memory_layout>
			<binary name="dumper" physical_address="236000"/>
			<device name="vga"/>
		</subject>

		<subject id="2" name="subject_a" pml4_address="250000" io_bitmap_address="254000">
			&subjainit;
			<memory_layout>
				&subjamem;
				<!-- virtual terminal console 1 -->
				<memory_region physical_address="260000" virtual_address="b8000" size="4k" alignment="4k" writable="true" executable="false"/>
			</memory_layout>
			<binary name="subject_a" physical_address="256000"/>
		</subject>

		<subject id="3" name="subject_b" pml4_address="270000" io_bitmap_address="274000">
			&subjbinit;
			<memory_layout>
				&subjbmem;
			</memory_layout>
			<binary name="subject_b" physical_address="276000"/>
			<device name="vga"/>
		</subject>

		<subject id="4" name="subject_c" pml4_address="290000" io_bitmap_address="294000">
			&subjcinit;
			<memory_layout>
				&subjcmem;
				<!-- virtual terminal consoles -->
				<memory_region physical_address="260000" virtual_address="18000" size="4k" alignment="4k" writable="false" executable="false"/>
			</memory_layout>
			<binary name="subject_c" physical_address="296000"/>
			<device name="vga"/>
			<device name="keyboard"/>
		</subject>

		<subject id="5" name="idle" pml4_address="310000" io_bitmap_address="314000">
			&idleinit;
			<memory_layout>
				&idlemem;
			</memory_layout>
			<binary name="idle" physical_address="316000"/>
		</subject>
	</subjects>

	&scheduling;
</system>
