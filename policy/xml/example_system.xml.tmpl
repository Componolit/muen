<!DOCTYPE system [
<!ENTITY hardware   SYSTEM "hardware/__HARDWARE__.xml">
<!ENTITY kernel      SYSTEM "example_kernel.xml">
<!ENTITY binaries    SYSTEM "example_binaries.xml">
<!ENTITY scheduling  SYSTEM "example_scheduling.xml">
<!ENTITY tau0init    SYSTEM "tau0.xml">
<!ENTITY tau0mem     SYSTEM "tau0_mem.xml">
<!ENTITY vtinit      SYSTEM "vt.xml">
<!ENTITY vtmem       SYSTEM "vt_mem.xml">
<!ENTITY timeinit    SYSTEM "time.xml">
<!ENTITY timemem     SYSTEM "time_mem.xml">
<!ENTITY sminit      SYSTEM "sm.xml">
<!ENTITY smmem       SYSTEM "sm_mem.xml">
<!ENTITY linuxinit   SYSTEM "linux.xml">
<!ENTITY linuxmem    SYSTEM "linux_mem.xml">
<!ENTITY linuxmmconf SYSTEM "linux_mmconf.xml">
]>
<system vmxon_address="1000" vmcs_start_address="5000">
	&hardware;
	&kernel;
	&binaries;

	<subjects>
		<subject id="0" name="tau0" profile="native" cpu="3" pml4_address="210000" io_bitmap_address="214000" msr_bitmap_address="216000">
			&tau0init;
			<memory_layout>
				&tau0mem;
				<!-- Ï„0 => kernel interface page -->
				<memory_region physical_address="1ff000" virtual_address="1ff000" size="4k" alignment="4k" writable="true" executable="false" memory_type="WB"/>
			</memory_layout>
			<binary name="tau0" physical_address="217000"/>
		</subject>

		<subject id="1" name="vt" profile="native" cpu="0" pml4_address="240000" io_bitmap_address="244000" msr_bitmap_address="246000">
			&vtinit;
			<memory_layout>
				&vtmem;
				<!-- virtual terminals 1-6      -->
				<memory_region physical_address="300000" virtual_address="10000" size="4k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
				<memory_region physical_address="301000" virtual_address="11000" size="4k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
				<memory_region physical_address="302000" virtual_address="12000" size="4k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
				<memory_region physical_address="303000" virtual_address="13000" size="4k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
				<memory_region physical_address="304000" virtual_address="14000" size="4k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
				<memory_region physical_address="305000" virtual_address="15000" size="4k" alignment="4k" writable="true"  executable="false" memory_type="WB"/>

				<!-- Linux HVC -> VT channel -->
				<memory_region physical_address="306000" virtual_address="40000" size="4k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
			</memory_layout>
			<binary name="vt" physical_address="247000"/>
			<device name="vga"/>
			<device name="cursor"/>
			<device name="keyboard"/>
		</subject>

		<subject id="2" name="time" profile="native" cpu="2" pml4_address="270000" io_bitmap_address="274000" msr_bitmap_address="276000">
			&timeinit;
			<memory_layout>
				&timemem;
				<!-- Time page -->
				<memory_region physical_address="29e000" virtual_address="20000" size="4k" alignment="4k" writable="true"  executable="false" memory_type="WB"/>
				<!-- virtual terminal console 2 -->
				<memory_region physical_address="301000" virtual_address="b8000" size="4k" alignment="4k" writable="true"  executable="false" memory_type="WB"/>
			</memory_layout>
			<binary name="time" physical_address="277000"/>
			<device name="port80"/>
		</subject>

		<subject id="3" name="sm" profile="native" cpu="1" pml4_address="2a0000" io_bitmap_address="2a4000" msr_bitmap_address="2a6000">
			&sminit;
			<memory_layout>
				&smmem;
				<!-- Linux subject state descriptor -->
				<memory_region physical_address="1e4000" virtual_address="1e0000" size="4k" alignment="4k" writable="true" executable="false" memory_type="WB"/>
				<!-- virtual terminal console 5     -->
				<memory_region physical_address="304000" virtual_address="b8000" size="4k" alignment="4k" writable="true" executable="false" memory_type="WB"/>
			</memory_layout>
			<binary name="sm" physical_address="2a7000"/>
			<event_table>
				<handover event="4" dst_subject="linux"/>
			</event_table>
		</subject>

		<subject id="4" name="linux" profile="vm" cpu="1" pml4_address="2d0000"
		 io_bitmap_address="2d4000" msr_bitmap_address="2d6000"
		 zero_page_address="2d7000" acpi_tables_address="2e0000"
		 cmdline="lpj=10000 earlyprintk=serial console=hvc0 console=ttyS0,115200 pci=noearly notsc">
			&linuxinit;
			<memory_layout>
				&linuxmem;
				&linuxmmconf;
				<!-- Time page -->
				<memory_region physical_address="29e000" virtual_address="1000" size="4k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
				<!-- Linux HVC -> VT channel -->
				<memory_region physical_address="306000" virtual_address="2000" size="4k" alignment="4k" writable="true" executable="false" memory_type="WB"/>
			</memory_layout>
			<binary name="linux" physical_address="400000"/>
			<device name="port80"/>
			<device name="serial"/>
			<device name="ohci"/>
			<trap_table>
				<entry kind="*" dst_subject="sm" dst_vector="36"/>
			</trap_table>
			<msr start="c0000080" end="c0000084" mode="rw"/>
		</subject>
	</subjects>

	&scheduling;
</system>
