<!DOCTYPE system [
<!ENTITY hardware   SYSTEM "hardware/__HARDWARE__.xml">
<!ENTITY kernel      SYSTEM "example_kernel.xml">
<!ENTITY binaries    SYSTEM "example_binaries.xml">
<!ENTITY scheduling  SYSTEM "example_scheduling.xml">
<!ENTITY tau0init    SYSTEM "tau0.xml">
<!ENTITY tau0mem     SYSTEM "tau0_mem.xml">
<!ENTITY vtinit      SYSTEM "vt.xml">
<!ENTITY vtmem       SYSTEM "vt_mem.xml">
<!ENTITY crypterinit SYSTEM "crypter.xml">
<!ENTITY cryptermem  SYSTEM "crypter_mem.xml">
<!ENTITY sminit      SYSTEM "sm.xml">
<!ENTITY smmem       SYSTEM "sm_mem.xml">
<!ENTITY linuxinit   SYSTEM "linux.xml">
<!ENTITY linuxmem    SYSTEM "linux_mem.xml">
]>
<system vmxon_address="1000" vmcs_start_address="5000">
	&hardware;
	&kernel;
	&binaries;

	<subjects>
		<subject id="0" name="tau0" profile="native" cpu="3" pml4_address="210000" io_bitmap_address="214000" msr_bitmap_address="216000">
			&tau0init;
			<memory_layout>
				&tau0mem;
				<!-- Ï„0 => kernel interface page -->
				<memory_region physical_address="1ff000" virtual_address="1ff000" size="4k" alignment="4k" writable="true" executable="false" memory_type="WB"/>
			</memory_layout>
			<binary name="tau0" physical_address="217000"/>
		</subject>

		<subject id="1" name="vt" profile="native" cpu="0" pml4_address="240000" io_bitmap_address="244000" msr_bitmap_address="246000">
			&vtinit;
			<memory_layout>
				&vtmem;
				<!-- virtual terminal console 6 -->
				<memory_region physical_address="360000" virtual_address="1b8000" size="4k" alignment="4k" writable="true" executable="false" memory_type="WB"/>

				<!-- virtual terminals 1-6      -->
				<memory_region physical_address="310000" virtual_address="10000" size="32k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
				<memory_region physical_address="320000" virtual_address="18000" size="32k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
				<memory_region physical_address="330000" virtual_address="20000" size="32k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
				<memory_region physical_address="340000" virtual_address="28000" size="32k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
				<memory_region physical_address="350000" virtual_address="30000" size="32k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
				<memory_region physical_address="360000" virtual_address="38000" size="32k" alignment="4k" writable="false" executable="false" memory_type="WB"/>

				<!-- Xv6 driver page            -->
				<memory_region physical_address="300000" virtual_address="40000" size="4k" alignment="4k" writable="true" executable="false" memory_type="WB"/>
			</memory_layout>
			<binary name="vt" physical_address="247000"/>
			<device name="vga"/>
			<device name="cursor"/>
			<device name="keyboard"/>
			<event_table>
				<interrupt event="1" dst_subject="linux" dst_vector="33" send_ipi="true"/>
			</event_table>
			<msr start="802" end="802" mode="r"/>
		</subject>

		<subject id="2" name="crypter" profile="native" cpu="2" pml4_address="270000" io_bitmap_address="274000" msr_bitmap_address="276000">
			&crypterinit;
			<memory_layout>
				&cryptermem;
				<!-- crypter request  page      -->
				<memory_region physical_address="29d000" virtual_address="10000" size="4k" alignment="4k" writable="false" executable="false" memory_type="WB"/>
				<!-- crypter response page      -->
				<memory_region physical_address="29e000" virtual_address="20000" size="4k" alignment="4k" writable="true"  executable="false" memory_type="WB"/>
				<!-- virtual terminal console 2 -->
				<memory_region physical_address="320000" virtual_address="b8000" size="32k" alignment="4k" writable="true"  executable="false" memory_type="WB"/>
			</memory_layout>
			<binary name="crypter" physical_address="277000"/>
			<event_table>
				<interrupt event="4" dst_subject="linux" dst_vector="200" send_ipi="true"/>
			</event_table>
		</subject>

		<subject id="3" name="sm" profile="native" cpu="1" pml4_address="2a0000" io_bitmap_address="2a4000" msr_bitmap_address="2a6000">
			&sminit;
			<memory_layout>
				&smmem;
				<!-- Linux subject state descriptor -->
				<memory_region physical_address="1e4000" virtual_address="1e0000" size="4k" alignment="4k" writable="true" executable="false" memory_type="WB"/>
				<!-- virtual terminal console 5     -->
				<memory_region physical_address="350000" virtual_address="b8000" size="32k" alignment="4k" writable="true" executable="false" memory_type="WB"/>
			</memory_layout>
			<binary name="sm" physical_address="2a7000"/>
			<event_table>
				<handover event="4" dst_subject="linux"/>
			</event_table>
		</subject>

		<subject id="4" name="linux" profile="vm" cpu="1" pml4_address="2d0000" io_bitmap_address="2d4000" msr_bitmap_address="2d6000" zero_page_address="2d7000">
			&linuxinit;
			<memory_layout>
				&linuxmem;
				<!-- virtual terminal console 1 -->
				<memory_region physical_address="310000" virtual_address="b8000" size="32k" alignment="4k" writable="true" executable="false" memory_type="WB"/>
			</memory_layout>
			<binary name="linux" physical_address="400000"/>
			<device name="serial"/>
			<trap_table>
				<entry kind="*" dst_subject="sm" dst_vector="36"/>
			</trap_table>
			<event_table>
				<interrupt event="1" dst_subject="crypter" dst_vector="36" send_ipi="true"/>
			</event_table>
		</subject>
	</subjects>

	&scheduling;
</system>
