<hardware>
	<processor logical_cpus="4" speed="50" vmx_timer_rate="0"/>
	<device name="port80">
		<io_port start="0080" end="0080"/>
	</device>
	<device name="serial">
		<io_port start="03f8" end="03ff"/>
	</device>
	<device name="keyboard" irq="1">
		<io_port start="0060" end="0060"/>
		<io_port start="0064" end="0064"/>
	</device>
	<device name="vga">
		<memory_layout>
			<memory_region physical_address="b8000" virtual_address="b8000" size="32k" alignment="4k" writable="true" executable="false" memory_type="WC"/>
		</memory_layout>
	</device>
	<device name="cursor">
		<io_port start="03d4" end="03d5"/>
	</device>
	<device name="ohci" irq="11">
		<memory_layout>
			<memory_region physical_address="30000000" virtual_address="30000000" size="2M" alignment="2M" writable="true" executable="false" memory_type="UC"/>
		</memory_layout>
	</device>
</hardware>
