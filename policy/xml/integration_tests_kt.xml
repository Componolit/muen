<?xml version="1.0"?>
<system>
	<include href="common_platform.xml"/>

	<kernelDiagnosticsDevice physical="debugconsole">
		<ioPort physical="port"/>
	</kernelDiagnosticsDevice>

	<memory>
		<include href="common_memory.xml"/>

		<memory name="nic_linux|ram" size="16#4000_0000#" alignment="16#0020_0000#" caching="WB"/>
		<memory name="nic_linux|lowmem" size="16#0008_0000#" caching="WB"/>
		<memory name="storage_linux|ram" size="16#0f60_0000#" alignment="16#0020_0000#" caching="WB"/>
		<memory name="storage_linux|lowmem" size="16#0008_0000#" caching="WB"/>
		<memory name="logbuffer_placeholder0" size="16#0001_0000#" caching="WB"/>
		<memory name="logbuffer_placeholder" size="16#0002_0000#" caching="WB"/>
	</memory>

	<deviceDomains>
		<domain name="nic_domain">
			<memory>
				<memory logical="dma1" physical="nic_linux|lowmem" virtualAddress="16#0002_0000#" writable="true" executable="false"/>
				<memory logical="dma2" physical="nic_linux|ram" virtualAddress="16#00f0_0000#" writable="true" executable="false"/>
			</memory>
			<devices>
				<device logical="nic1" physical="ethernet"/>
				<device logical="nic2" physical="ethernet_2"/>
			</devices>
		</domain>
		<domain name="storage_domain">
			<memory>
				<memory logical="dma1" physical="storage_linux|lowmem" virtualAddress="16#0002_0000#" writable="true" executable="false"/>
				<memory logical="dma2" physical="storage_linux|ram" virtualAddress="16#00f0_0000#" writable="true" executable="false"/>
			</memory>
			<devices>
				<device logical="xhci" physical="xhci"/>
				<device logical="sata" physical="ahci"/>
				<device logical="nic3" physical="ethernet_3"/>
			</devices>
		</domain>
	</deviceDomains>

	<include href="common_events.xml"/>
	<include href="common_channels.xml"/>
	<include href="common_components.xml"/>

	<subjects>
		<include href="subject_vt.xml"/>
		<include href="subject_nic_sm.xml"/>
		<include href="subject_storage_sm.xml"/>
		<include href="subject_time.xml"/>

		<subject name="nic_linux" profile="linux">
			<vcpu>
				<vmx>
					<controls>
						<proc>
							<!-- Required for pingpong cycles measurement -->
							<RDTSCExiting>0</RDTSCExiting>
						</proc>
					</controls>
				</vmx>
			</vcpu>
			<bootparams>console=hvc console=ttyS0 pci=noearly hostname=nic_linux muen_integ=on_kt muen-input.channel=virtual_keyboard debug</bootparams>
			<memory>
				<memory logical="lowmem" physical="nic_linux|lowmem" virtualAddress="16#0002_0000#" writable="true" executable="false"/>
				<memory logical="initramfs" physical="initramfs" virtualAddress="16#00a0_0000#" writable="false" executable="false"/>
				<memory logical="ram" physical="nic_linux|ram" virtualAddress="16#00f0_0000#" writable="true" executable="true"/>
			</memory>
			<devices>
				<device logical="cmos_rtc" physical="cmos_rtc">
					<ioPort logical="ports" physical="ports"/>
				</device>
				<device logical="nic1" physical="ethernet">
					<irq logical="nic1_irq" physical="irq" vector="59"/>
					<memory logical="mmio1" physical="mmio1" writable="true" executable="false"/>
					<memory logical="mmio2" physical="mmio2" writable="true" executable="false"/>
				</device>
				<device logical="nic2" physical="ethernet_2">
					<pci bus="16#00#" device="16#1f#" function="0"/>
					<irq logical="nic1_irq" physical="irq" vector="60"/>
					<memory logical="mmio1" physical="mmio1" writable="true" executable="false"/>
					<memory logical="mmio2" physical="mmio2" writable="true" executable="false"/>
				</device>
			</devices>
			<events>
				<source>
					<group name="vmx_exit">
						<default action="continue">
							<notify physical="trap_to_sm_1"/>
						</default>
					</group>
				</source>
				<target>
					<event logical="resume_after_trap" physical="resume_linux_1" vector="none"/>
					<event logical="serial_irq4" physical="serial_irq4_linux_1" vector="52"/>
				</target>
			</events>
			<channels>
				<reader logical="virtual_keyboard" physical="virtual_input_1" virtualAddress="16#3000#" vector="49"/>
				<writer logical="virtual_console" physical="virtual_console_1" virtualAddress="16#4000#" event="1"/>

				<reader logical="testchannel_2" physical="testchannel_2" virtualAddress="16#00e0_0000#"/>
				<writer logical="testchannel_1" physical="testchannel_1" virtualAddress="16#00e0_1000#"/>
				<reader logical="testchannel_4" physical="testchannel_4" virtualAddress="16#00e0_2000#"/>
				<writer logical="testchannel_3" physical="testchannel_3" virtualAddress="16#00e0_3000#"/>
			</channels>
			<component ref="linux"/>
		</subject>

		<subject name="storage_linux" profile="linux">
			<bootparams>console=hvc console=ttyS0 pci=noearly hostname=storage_linux debug</bootparams>
			<memory>
				<memory logical="lowmem" physical="storage_linux|lowmem" virtualAddress="16#0002_0000#" writable="true" executable="false"/>
				<memory logical="initramfs" physical="initramfs" virtualAddress="16#00a0_0000#" writable="false" executable="false"/>
				<memory logical="ram" physical="storage_linux|ram" virtualAddress="16#00f0_0000#" writable="true" executable="true"/>
			</memory>
			<devices>
				<device logical="cmos_rtc" physical="cmos_rtc">
					<ioPort logical="ports" physical="ports"/>
				</device>
				<device logical="xhci" physical="xhci">
					<irq logical="xhci_irq" physical="irq" vector="55"/>
					<memory logical="mmio" physical="mmio" writable="true" executable="false"/>
				</device>
				<device logical="ahci" physical="ahci">
					<pci bus="16#00#" device="16#1f#" function="0"/>
					<irq logical="irq" physical="irq" vector="59"/>
					<ioPort logical="port1" physical="port1"/>
					<ioPort logical="port2" physical="port2"/>
					<ioPort logical="port3" physical="port3"/>
					<ioPort logical="port4" physical="port4"/>
					<ioPort logical="port5" physical="port5"/>
					<memory logical="mmio" physical="mmio" writable="true" executable="false"/>
				</device>
				<device logical="nic" physical="ethernet_3">
					<pci bus="16#00#" device="16#1e#" function="0"/>
					<irq logical="nic_irq" physical="irq_1" vector="90"/>
					<irq logical="nic_irq" physical="irq_2" vector="91"/>
					<irq logical="nic_irq" physical="irq_3" vector="92"/>
					<irq logical="nic_irq" physical="irq_4" vector="93"/>
					<irq logical="nic_irq" physical="irq_5" vector="94"/>
					<memory logical="mmio1" physical="mmio1" writable="true" executable="false"/>
					<memory logical="mmio2" physical="mmio2" writable="true" executable="false"/>
				</device>
			</devices>
			<events>
				<source>
					<group name="vmx_exit">
						<default action="continue">
							<notify physical="trap_to_sm_2"/>
						</default>
					</group>
				</source>
				<target>
					<event logical="resume_after_trap" physical="resume_linux_2" vector="none"/>
					<event logical="serial_irq4" physical="serial_irq4_linux_2" vector="52"/>
				</target>
			</events>
			<channels>
				<reader logical="virtual_input" physical="virtual_input_2" virtualAddress="16#3000#" vector="49"/>
				<writer logical="virtual_console" physical="virtual_console_2" virtualAddress="16#4000#" event="1"/>

				<reader logical="testchannel_1" physical="testchannel_1" virtualAddress="16#00e0_0000#"/>
				<writer logical="testchannel_2" physical="testchannel_2" virtualAddress="16#00e0_1000#"/>
				<reader logical="testchannel_3" physical="testchannel_3" virtualAddress="16#00e0_2000#"/>
				<writer logical="testchannel_4" physical="testchannel_4" virtualAddress="16#00e0_3000#"/>
			</channels>
			<component ref="linux"/>
		</subject>

		<!-- The dbgserver subject must be the last subject in the policy -->
		<include href="subject_dbgserver.xml"/>
	</subjects>

	<include href="common_scheduling.xml"/>

</system>
