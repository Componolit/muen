BUILD_OPTS += --RTS=$(TOP_DIR)/rts/obj

SPARK_PROVERS ?= z3,cvc4,alt-ergo

SPARK_OPTS =                  \
	--warnings=error          \
	--report=all              \
	-f                        \
	-k                        \
	--proof=per_path          \
	--prover=$(SPARK_PROVERS) \
	--timeout=10              \
	-Xbuild=prove             \
	-j$(NUM_CPUS)

ALL = $(OBJ_DIR)/$(PACKAGE)

ifeq ($(NO_PROOF),)
ALL += $(OBJ_DIR)/prove/gnatprove/gnatprove.out
endif

all: $(ALL)

$(OBJ_DIR)/prove/gnatprove/gnatprove.out:
	gnatprove $(SPARK_OPTS) -P$(PACKAGE)

.PHONY: $(OBJ_DIR)/$(PACKAGE)
